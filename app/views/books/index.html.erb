<div class="book-box">
	<div class="index-box">
		<h2>Books</h2>
		<table>
			<thead>
				<tr>
					<th>Title</th>
					<th>Body</th>
					<th colspan='3'></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
						<td><%= link_to 'Show', book_path(book) %></td>
						<td><%= link_to 'Edit', edit_book_path(book) %></td>
						<td><%= link_to 'Destroy', book_path(book), method: :delete %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

	<div class="new-box">
		<h2>New Book</h2>
		<%= form_with model: @book do |f| %>
			<div class="form-group">
				<%= f.label :title %><br>
				<%= f.text_field :title %>
			</div>
			<div class="form-group">
				<%= f.label :body %><br>
				<%= f.text_area :body %>
			</div>
			<%= f.submit 'create book' %>
		<% end %>
	</div>
</div>