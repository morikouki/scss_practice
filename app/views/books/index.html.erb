<div class="book-box">
	<div class="index-box">
		<h2>Books</h2>
	</div>

	<div class="new-box">
		<h2>New Book</h2>
		<%= form_with model: @book do |f| %>
			<div class="form-group">
				<%= f.label :title %><br>
				<%= f.text_field :title %>
			</div>
			<div class="form-group">
				<%= f.label :body %><br>
				<%= f.text_area :body %>
			</div>
			<%= f.submit 'create book' %>
		<% end %>
	</div>
</div>