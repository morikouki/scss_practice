<div class="book-edit-box">
	<h2>Editing Book</h2>
	<%= form_with model: @book, url: book_path(@book) do |f| %>
		<div class="form-group">
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		</div>
		<div class="form-group">
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</div>
		<%= f.submit 'Update Book' %>
	<% end %>
	<%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %>
</div>